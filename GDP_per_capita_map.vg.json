{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "GDP per capita (current US$) â€” 2019",
    "subtitle": "Data source: World Bank, Natural Earth"
  },
  "width": 800,
  "height": 400,
  "projection": { "type": "equalEarth" },

  "layer": [
    {
      "mark": { "type": "rect", "color": "#cfe8f3" },
      "width": 800,
      "height": 400
    },
    {
      "data": { "graticule": { "step": [30, 30] } },
      "mark": { "type": "geoshape", "stroke": "#88a6b8", "strokeWidth": 0.6, "fill": null },
      "projection": { "type": "equalEarth" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "transform": [
        {
          "lookup": "properties.ISO_A3",
          "from": {
            "data": {
              "url": "https://api.worldbank.org/v2/country/all/indicator/NY.GDP.PCAP.CD?date=2019&format=json&per_page=20000",
              "format": { "type": "json", "property": "1" }
            },
            "key": "countryiso3code",
            "fields": ["value"]
          }
        },
        { "calculate": "isValid(datum.value) ? toNumber(datum.value) : null", "as": "GDP per capita (US$)" }
      ],
      "mark": { "type": "geoshape", "stroke": "#ffffff", "strokeWidth": 0.3 },
      "encoding": {
        "color": {
          "field": "GDP per capita (US$)",
          "type": "quantitative",
          "scale": { "type": "log", "scheme": "blues" },
          "title": "GDP per capita (US$, 2019)",
          "legend": { "orient": "right" }
        },
        "tooltip": [
          { "field": "properties.NAME", "title": "Country" },
          { "field": "properties.ISO_A3", "title": "ISO-3" },
          {
            "field": "GDP per capita (US$)",
            "title": "GDP per capita (US$)",
            "type": "quantitative",
            "format": ",.0f"
          }
        ]
      },
      "projection": { "type": "equalEarth" }
    }
  ]
}
