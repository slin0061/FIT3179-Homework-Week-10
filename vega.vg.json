{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "GDP per capita vs Country with point size = Population (2022). Joins directly by 'Country Code'.",
  "width": 900,
  "height": 900,
  "data": {
    "url": "https://raw.githubusercontent.com/slin0061/FIT3179-Homework-Week-10/main/data/API_NY.GDP.PCAP.CD_DS2_en_csv_v2_1233921.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "calculate": "toNumber(datum['2022'])",
      "as": "gdp_pc"
    },
    {
      "filter": "datum['Indicator Code'] == 'NY.GDP.PCAP.CD' && isValid(datum['Country Name']) && isValid(datum['Country Code']) && isFinite(datum.gdp_pc) && datum.gdp_pc > 0"
    },
    {
      "lookup": "Country Code",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/slin0061/FIT3179-Homework-Week-10/main/data/API_SP.POP.TOTL_DS2_en_csv_v2_1233981.csv",
          "format": {"type": "csv"}
        },
        "key": "Country Code",
        "fields": ["2022"]
      },
      "as": ["population"]
    },
    {
      "calculate": "toNumber(datum.population)",
      "as": "population"
    },
    {
      "filter": "isValid(datum.population) && isFinite(datum.population) && datum.population > 0"
    }
  ],
  "layer": [
    {
      "mark": {"type": "circle", "opacity": 0.9},
      "encoding": {
        "x": {
          "field": "gdp_pc",
          "type": "quantitative",
          "title": "GDP per capita (2022, US$)",
          "axis": {"format": "$,.0f"}
        },
        "y": {
          "field": "Country Name",
          "type": "nominal",
          "title": "Country",
          "sort": "-x"
        },
        "size": {
          "field": "population",
          "type": "quantitative",
          "title": "Population (2022)",
          "legend": {"format": ",.0f"}
        },
        "color": {"value": "#4C78A8"},
        "tooltip": [
          {"field": "Country Name", "title": "Country"},
          {"field": "Country Code", "title": "ISO"},
          {"field": "gdp_pc", "type": "quantitative", "title": "GDP per capita", "format": "$,.0f"},
          {"field": "population", "type": "quantitative", "title": "Population", "format": ",.0f"}
        ]
      }
    },
    {
      "transform": [
        {
          "window": [{"op": "rank", "as": "r_desc"}],
          "sort": [{"field": "gdp_pc", "order": "descending"}]
        },
        {"filter": "datum.r_desc == 1"}
      ],
      "mark": {"type": "text", "align": "left", "baseline": "middle", "dx": 8, "fontWeight": "bold"},
      "encoding": {
        "x": {"field": "gdp_pc", "type": "quantitative"},
        "y": {"field": "Country Name", "type": "nominal"},
        "text": {"value": "Highest GDP per capita"},
        "color": {"value": "black"}
      }
    },
    {
      "transform": [
        {
          "window": [{"op": "rank", "as": "r_asc"}],
          "sort": [{"field": "gdp_pc", "order": "ascending"}]
        },
        {"filter": "datum.r_asc == 1"}
      ],
      "mark": {"type": "text", "align": "right", "baseline": "middle", "dx": -8, "fontWeight": "bold"},
      "encoding": {
        "x": {"field": "gdp_pc", "type": "quantitative"},
        "y": {"field": "Country Name", "type": "nominal"},
        "text": {"value": "Lowest GDP per capita"},
        "color": {"value": "black"}
      }
    }
  ],
  "config": {
    "axis": {"labelFontSize": 11, "titleFontSize": 12},
    "legend": {"titleFontWeight": "bold"},
    "view": {"stroke": null}
  }
}
